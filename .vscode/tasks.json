{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "systems:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"python": {
				"module": "systems"
			}
		},
		{
			"type": "docker-build",
			"label": "docker-build: dev",
			"platform": "python",
			"dockerBuild": {
				"tag": "systems:dev",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true,
				"target": "development"
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: dev",
			"dependsOn": [
				"docker-build: dev",
			],
			"python": {
				"module": "systems"
			}
		}
	]
}
